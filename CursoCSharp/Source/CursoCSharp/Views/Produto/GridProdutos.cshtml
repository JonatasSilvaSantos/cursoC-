@model IEnumerable<CursoCSharp.Application.Models.ProdutoModel>
@{ Layout = null;}

<table class="striped" id="gridProdutos">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Valor R$</th>
            <th>Estoque</th>
            <th>
                <a class="btn-floating waves-effect waves-light red tooltiped modal-trigger"
                   style="float: right" data-position="left"
                   data-delay="50" data-tooltip="Novo" href="#modalCadastroProduto">
                    <i class="material-icons"> add_circle</i>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var produto in Model)
        {
            <tr>
                <td>@produto.CodigoProduto</td>
                <td>@produto.Nome</td>
                <td>@produto.Preco</td>
                <td>@produto.Estoque</td>
                <td>
                    <a class="btn waves-effect" onclick="DeletaProduto(@produto.CodigoProduto)">
                        <i class="material-icons"> delete</i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>

    function DeletaProduto(codigo) {
        $.get('@Url.Action("DeletaProduto")',
            {
                codigoProduto: codigo
            }).fail(function () {
                Materialize.toast("Algo deu errado", 4000);
            });
    }
</script>